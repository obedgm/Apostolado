mixin galleryItem(item, i)
  div
    .gallery__item
      img.gallery__img(data-u='image', src='#{path.media}/gallery/' + item.img, alt='', style='')
      if item.type === 'play'
        button.gallery__btn.js-gallery-btn.js-gallery-item(data-html='<iframe width="840" height="475" src="https://www.youtube.com/embed/bofF_aRIILI" frameborder="0" allowfullscreen></iframe>', data-gallery-index=i)
          i.fa(class='fa-' + item.type)
      else
        button.gallery__btn.js-gallery-btn.js-gallery-item(data-img='#{path.media}/gallery/1735x1162/' + item.img, data-size="1920x1010", data-gallery-index=i)
          i.fa(class='fa-' + item.type)

// BEGIN GALLERY WIDE
.gallery.gallery--wide
  // Jssor Slider Begin
  // To move inline styles to css file/block, please specify a class name for each element.
  #gallery-wide(style='position: relative; top: 0px; left: 0px; width: 1920px; height: 350px; overflow: hidden;')
    // Loading Screen
    div(data-u='loading', style='position: absolute; top: 0px; left: 0px;')
      div(style='filter: alpha(opacity=70); opacity:0.7; position: absolute; display: block;\
      background-color: #000; top: 0px; left: 0px;width: 100%;height:100%;')
      div(style='position: absolute; display: block; \
      top: 0px; left: 0px;width: 100%;height:100%;')
    // Slides Container
    div(data-u='slides', style='position: absolute; left: 0px; top: 0px; width: 1920px; height: 350px; overflow: hidden;')
      each item, i in [{img: 'gallery-1.jpg', type: 'search'}, {img: 'gallery-2.jpg', type: 'search'}, {img: 'gallery-3.jpg', type: 'play'}, {img: 'gallery-4.jpg', type: 'search'}, {img: 'gallery-5.jpg', type: 'play'}, {img: 'gallery-1.jpg', type: 'play'}, {img: 'gallery-2.jpg', type: 'search'}, {img: 'gallery-3.jpg', type: 'play'}, {img: 'gallery-4.jpg', type: 'search'}, {img: 'gallery-5.jpg', type: 'play'}]
        +galleryItem(item, i )
// END GALLERY WIDE
