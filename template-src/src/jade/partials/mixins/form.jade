mixin form(formType)
  // BEGIN FORM
  form.form.js-parsley(class='form--#{formType}', action='#')
    .row
      .form-group.form-group--lg-4
        label.control-label(for='#{formType}-name') Your Name *
        input.form-control(type='text', id='#{formType}-name', required)

      .form-group.form-group--lg-4
        label.control-label(for='#{formType}-email') Your E-mail *
        input.form-control(type='email', id='#{formType}-email', required)

      .form-group.form-group--lg-4
        label.control-label(for='#{formType}-phone') Your telephone
        input.form-control(type='text', id='#{formType}-phone', required)

    .row
      .form-group.form-group--lg-12
        label.control-label(for='#{formType}-message') Message
        textarea.form-control(id='#{formType}-message', required)
    .form__buttons
      button.btn--flat.form__btn(type='submit') Submit
  // END FORM

mixin formReview(formType)
  // BEGIN FORM
  form.form.js-parsley(class='form--#{formType}', action='#')
    .row
      .form-group.form-group--lg-4
