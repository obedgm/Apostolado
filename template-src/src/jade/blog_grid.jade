  - var pageTitle = 'Our blog';
  - var sidebarTitle = 'Blog';
  - var mainClass = 'main--subpage main--blog';

block content
  include partials/chunks/filters
  +widget(null, 'listing')
    .post.post--grid.js-switch-view(data-view='post')
      .listing.listing--grid
        each post, i in locals.data.posts
          include partials/widgets/post/post__item
        each post, i in locals.data.posts
          include partials/widgets/post/post__item
  +pagination('', true)

